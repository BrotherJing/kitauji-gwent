<style>
  .bbm-modal__section {
    color: white;
  }
</style>
<div class="bbm-modal__topbar">
  <h3 class="bbm-modal__title">{{i18n "sign_in"}}</h3>
</div>
<div class="bbm-modal__section small-cards-modal">
  <form class="form-horizontal">
    <div class="form-group">
      <label for="username" class="col-sm-2 control-label">{{i18n "username"}}</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="username" placeholder="{{i18n "username_validation"}}">
      </div>
    </div>
    <div class="form-group">
      <label for="password" class="col-sm-2 control-label">{{i18n "password"}}</label>
      <div class="col-sm-10">
        <input type="password" class="form-control" id="password" placeholder="{{i18n "password"}}">
      </div>
    </div>
    <div class="form-group">
      <label for="bandName" class="col-sm-2 control-label">{{i18n "band_name"}}</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="bandName" placeholder="{{i18n "band_name_hint"}}">
      </div>
    </div>
    <div class="form-group">
      <label for="initialDeck" class="col-sm-2 control-label">{{i18n "initial_deck"}}</label>
      <div class="col-sm-10">
        <select id="initialDeck" class="field-session">
          <option value="random">{{i18n "deck_random"}}</option>
          <option value="kumiko1">{{i18n "deck_ku1"}} ({{i18n "faction_ability_kumiko1"}})</option>
          <option value="kumiko1S2">{{i18n "deck_ku1S2"}} ({{i18n "faction_ability_kumiko1S2"}})</option>
          <option value="kitauji">{{i18n "deck_ku2"}} ({{i18n "faction_ability_kitauji"}})</option>
        </select>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <div id="btnSignIn" class="btn btn-success">{{i18n "sign_in"}}</div>
      </div>
    </div>
  </form>
</div>
