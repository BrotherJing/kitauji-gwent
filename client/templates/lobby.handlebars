<style>
  body {
    background: #ffffff center top no-repeat;
    background-size: cover;
  }

  .container {
    margin-bottom: 0;
  }

  .container-form-landing {
    opacity: 1;
    margin: 60px 0 0 0;
    display: flex;
    justify-content: center;
  }

  .field-session {
    width: 250px !important;
  }

  .container {
    background: transparent;
  }

  .icon-action-load {
    background: url(/assets/texture/action-load.gif) no-repeat;
    display: none;

    width: 16px;
    height: 16px;
    float: right;
    margin: 6px -7px 0 7px;
  }

  .startMatchmaking {
    height: auto !important;
    width: auto !important;
    line-height: 29px;
  }

  .startMatchmakingWithBot {
    height: auto !important;
    width: auto !important;
    line-height: 29px;
    margin-right: 10px;
    background: #01acc6;
  }

  .wrap-landing {
    max-width: 800px;
  }

  .teaser-landing {
    float: left;
    width: 100%;
    margin: 70px 0 0 0;
    text-shadow: none;
  }

  .status-offline {
    color: red;
  }

  .status-online {
    color: green;
  }
</style>

<section class="container-landing">
  <div class="wrap-landing">
    <img src="/assets/texture/eupho_matsuri.jpeg" height="300" alt="Gwent" class="logo-big">

    <div class="container-form-landing">

      <input type="text" placeholder="{{i18n "room_name"}}" class="field-session field-username room-name-input">

      <input type="text" placeholder="{{i18n "username"}}" class="field-session field-username name-input" autofocus value="{{name}}">

      <select id="deckChoice" class="field-session">
        <option value="random">{{i18n "deck_random"}}</option>
        <option value="kumiko1">{{i18n "deck_ku1"}}</option>
        <option value="kumiko1_2">{{i18n "deck_ku1_all_star"}}</option>
        <option value="kumiko1S2">{{i18n "deck_ku1S2"}}</option>
        <option value="kumiko1S2_2">{{i18n "deck_ku1S2_all_star"}}</option>
        <option value="kitauji">{{i18n "deck_ku2"}}</option>
        <option value="kitauji2">{{i18n "deck_ku2_all_star"}}</option>
        <option value="custom">{{i18n "deck_custom"}}</option>
      </select>
    </div>
    <div class="container-form-landing" style="margin-top:10px">
      <div class="wrap-btn-action btn-register-action startMatchmakingWithBot">
        <input type="submit" value="{{i18n "bot"}}" class="btn-action">
      </div>
      <div class="wrap-btn-action btn-register-action startMatchmaking">
        <input type="submit" value="{{i18n "matching"}}" class="btn-action">
        <i class="icon-action-load image-gif-loader"></i>
      </div>
    </div>
    <p class="teaser-landing">
      {{#if serverOffline}}
        <span>{{i18n "server_stat"}}<span class="status-offline">{{i18n "offline"}}</span></span>
      {{else}}
        <span>{{i18n "online_count"}}<span class="nr-player-online">0</span></span>
        &nbsp;&nbsp;&nbsp;&nbsp;
        <span>{{i18n "idle_count"}}<span class="nr-player-idle">0</span></span>
        <br>
        <span>{{i18n "server_stat"}}<span class="status-online">{{i18n "online"}}</span></span>
      {{/if}}
    </p>
  </div>
</section>

<footer class="rights">
  <p>{{i18n "download"}}<a href="https://github.com/kitauji-gwent/kitauji-gwent/releases" target="_blank"> {{i18n "standalone"}} </a>{{i18n "stable"}}</p>
  <p>This is a fan game and all rights are reserved by Kyoto Animation(and CD Projekt)</p>
</footer>
