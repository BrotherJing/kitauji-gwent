<div class="bbm-modal__topbar">
  <h3 class="bbm-modal__title">{{i18n "scoreboard"}}</h3>
</div>
<div class="bbm-modal__section ranking-modal-content">
  <h4>My rank: {{myRank}}</h4>
  <div class="ranking-table">
    <table>
      <tr>
        <th>Rank</th>
        <th>Name</th>
        <th>Win Count</th>
        <th>Lose Count</th>
      </tr>
      {{#each ranking}}
      <tr>
        <td>{{this.rank}}</td>
        <td>{{this.username}}({{this.bandName}})</td>
        <td>{{this.winCount}}</td>
        <td>{{this.loseCount}}</td>
      </tr>
      {{/each}}
    </table>
  </div>
</div>
<div class="bbm-modal__topbar">
  <span class="btn-sub bbm-close">{{i18n "close"}}</span>
</div>
