<style>
  .bbm-modal__section {
    color: white;
  }
</style>
<div class="bbm-modal__topbar">
  <h3 class="bbm-modal__title">创建房间</h3>
</div>
<div class="bbm-modal__section small-cards-modal">
  <form class="form-horizontal">
    <div class="form-group">
      <label for="roomName" class="col-sm-2 control-label">房间名</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="roomName" placeholder="可不填">
      </div>
    </div>
    {{!-- TOOD: room mode --}}
    <div class="form-group">
      <label for="roomName" class="col-sm-2 control-label">游戏模式</label>
      <div class="col-sm-10">
        <div class="radio">
        <label>
          <input type="radio" name="mode" id="defaultMode" value="defaultMode" checked>
          普通模式
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="mode" id="funMode" value="funMode">
          趣味模式
        </label>
      </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2">
        <select id="funDeck" class="form-control">
          {{#each funDecks}}
            <option value="{{this.key}}">{{this.name}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-10 col-sm-2">
        <div id="btnConfirm" class="btn btn-success" style="float: right;">{{i18n "confirm"}}</div>
      </div>
    </div>
  </form>
</div>
