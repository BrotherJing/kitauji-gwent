<div class="bbm-modal__topbar">
  <h3 class="bbm-modal__title">{{title}}</h3>
</div>
<div class="bbm-modal__section small-cards-modal">
  <form class="form-horizontal">
    <div class="form-group">
      <label for="amount" class="col-sm-2 control-label">数量</label>
      <div class="col-sm-10">
        <input type="number" class="form-control" id="amount" placeholder="要卖出的数量" min="0" max="{{max}}" value="1">
      </div>
    </div>
    <div class="form-group">
      <label for="price" class="col-sm-2 control-label">总价</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="price" placeholder="总价" readonly disabled value="{{price}}">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-10 col-sm-2">
        <div id="btnConfirm" class="btn btn-success" style="float: right;">{{i18n "confirm"}}</div>
      </div>
    </div>
  </form>
</div>
